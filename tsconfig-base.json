{
  "compilerOptions": {
      "lib": [
        "esnext",
        "dom",
        "dom.iterable"
    ],
    "types": [
      "jasmine",
      "node",
    ],
      "declaration": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "baseUrl": "src",
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}
